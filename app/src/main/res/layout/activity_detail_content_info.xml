<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/global_bg_front"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="@dimen/elevation_card">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_product_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:padding="@dimen/global_spacing_xs"
            android:text="@string/activity_detail_product_info"
            android:textAppearance="@style/TextAppearance.Worcipe.Headline" />

        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/dividerHorizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/global_spacing_xs">

            <TextView
                android:id="@+id/activity_detail_product_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector_clickable_item_bg"
                android:drawableTop="@drawable/tag_icon_24"
                android:gravity="center"
                android:text="Code"
                android:textAppearance="@style/TextAppearance.Worcipe.Subhead" />

            <TextView
                android:id="@+id/activity_detail_product_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector_clickable_item_bg"
                android:drawableTop="@drawable/dollar_icon"
                android:gravity="center"
                android:text="Price"
                android:textAppearance="@style/TextAppearance.Worcipe.Subhead" />

            <TextView
                android:id="@+id/activity_detail_product_state"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector_clickable_item_bg"
                android:drawableTop="@drawable/shopify"
                android:gravity="center"
                android:text="State"
                android:textAppearance="@style/TextAppearance.Worcipe.Subhead" />

        </LinearLayout>

        <View
            android:id="@+id/activity_detail_content_recipe_divider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/dividerHorizontal" />

        <TextView
            android:id="@+id/product_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/global_spacing_xs"
            android:visibility="gone"
            android:textAppearance="@style/TextAppearance.Worcipe.Body1"
            android:textColor="@color/global_text_secondary" />

        <Button
            android:id="@+id/btnAddToCart"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Mua hÃ ng"
            android:drawableLeft="@drawable/ic_add_shopping_cart_white_24dp"
            android:textColor="#FFFFFF"
            android:theme="@style/Button"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"/>


    </LinearLayout>
</android.support.v7.widget.CardView>