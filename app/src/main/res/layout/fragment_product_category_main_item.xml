<?xml version="1.0" encoding="utf-8"?>
<com.firerox.oplungiphone.view.SelectorRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_worcipe_list_item"
    android:layout_width="match_parent"
    android:layout_height="@dimen/fragment_worcipe_list_recycler_item_size"
    android:listSelector="@drawable/selector_clickable_item_bg_inverse"
    android:minHeight="@dimen/fragment_worcipe_list_recycler_item_size">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/category_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fragment_worcipe_list_recycler_item_size"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/category_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fragment_worcipe_list_recycler_item_size"
            android:layout_alignParentBottom="true"
            android:background="@color/fragment_worcipe_list_recycler_item_panel_bg"
            android:ellipsize="end"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical|center_horizontal"
            android:maxLines="3"
            android:paddingLeft="@dimen/global_spacing_xs"
            android:paddingRight="@dimen/global_spacing_xxs"
            android:textAppearance="@style/TextAppearance.Worcipe.Body1.Inverse"
            android:textSize="20dp" />

    </android.support.v7.widget.CardView>


</com.firerox.oplungiphone.view.SelectorRelativeLayout>