<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/global_bg_front"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="@dimen/elevation_card">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/activity_detail_product_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:padding="@dimen/global_spacing_xs"
            android:text="@string/activity_detail_product_detail"
            android:textAppearance="@style/TextAppearance.Worcipe.Headline" />

        <!--<TextView
            android:id="@+id/tv_product_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/global_spacing_xs"
            android:textAppearance="@style/TextAppearance.Worcipe.Body1"
            android:textColor="@color/global_text_secondary" />-->

        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_above="@+id/tv_product_detail"
            android:background="?attr/dividerHorizontal" />



        <WebView
            android:id="@+id/webViewDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></WebView>
    </LinearLayout>
</android.support.v7.widget.CardView>